            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ذخیره" class="btn btn-default" />
                <button type="button" class="btn btn-primary" onclick="close_modal()" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
}


