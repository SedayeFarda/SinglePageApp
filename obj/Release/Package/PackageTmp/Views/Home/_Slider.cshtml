@model IEnumerable<Product>






<div class="content">

    <div class="container">
       
        <div class="owl-carousel owl-1">
            @foreach (var item in Model)
            {
                <div><a href="/home/ShowProduct/@item.ProductId"><img src="~/images/product/@item.ImgName" alt="Image" class="img-fluid" style="height:400px"></a></div>
            }

        </div>
    </div>
</div>









